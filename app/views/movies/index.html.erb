<ul>
<% @movies.each do |movie| %>
  <section class="movie">
    <div class="image">
      <%= main_image(movie) %>
    </div>
    <div class="summary">
      <h2>
        <%= link_to(movie.title, movie_path(movie)) %>
      </h2>
      <h3>
        <%= total_gross(movie) %>
      </h3>
      <span class="stars">
        <% if movie.average_stars_as_percent == 0 %>
          <p>No Reviews</p>
        <% else %>
          <%= render "shared/stars", percent: movie.average_stars_as_percent %>
        <% end %>
      </span>
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>
</ul>

<% if signed_in_admin? %>
  <section class="admin">
    <%= link_to "Add New Movie", new_movie_path, class: "button" %>
  </section>
<% end %>
